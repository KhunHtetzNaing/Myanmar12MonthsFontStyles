<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:paddingTop="10dp"
    android:paddingBottom="60dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.htetznaing.myanmarfontstyles.MainActivity"
    tools:showIn="@layout/activity_main">

    <LinearLayout
        android:gravity="start"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

       <ImageView
           android:id="@+id/b1"
           android:src="@drawable/tagu"
           android:layout_width="match_parent"
           android:layout_height="50dp" />

        <ImageView
            android:id="@+id/b2"
            android:layout_marginTop="5dp"
            android:src="@drawable/kason"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <ImageView
            android:id="@+id/b3"
            android:layout_marginTop="5dp"
            android:src="@drawable/nayon"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <ImageView
            android:id="@+id/b4"
            android:layout_marginTop="5dp"
            android:src="@drawable/warso"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <ImageView
            android:id="@+id/b5"
            android:layout_marginTop="5dp"
            android:src="@drawable/wg"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <ImageView
            android:id="@+id/b6"
            android:layout_marginTop="5dp"
            android:src="@drawable/ttl"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <ImageView
            android:id="@+id/b7"
            android:layout_marginTop="5dp"
            android:src="@drawable/tdg"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <ImageView
            android:id="@+id/b8"
            android:layout_marginTop="5dp"
            android:src="@drawable/tsm"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <ImageView
            android:id="@+id/b9"
            android:layout_marginTop="5dp"
            android:src="@drawable/nattaw"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <ImageView
            android:id="@+id/b10"
            android:layout_marginTop="5dp"
            android:src="@drawable/pyatho"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <ImageView
            android:id="@+id/b11"
            android:layout_marginTop="5dp"
            android:src="@drawable/tabodwe"
            android:layout_width="match_parent"
            android:layout_height="50dp" />

        <ImageView
            android:id="@+id/b12"
            android:layout_marginTop="5dp"
            android:src="@drawable/tb"
            android:layout_width="match_parent"
            android:layout_height="50dp" />
    </LinearLayout>
</ScrollView>
